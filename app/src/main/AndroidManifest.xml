        <!--android:normalScreens="true"-->
        <!--android:smallScreens="true"/>-->



    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="IFLYTEK_APPKEY"
            android:value="5b191a6b" />

        <service android:name=".server.AIRecognizeServer" />
        <service android:name=".server.WakeUpServer" />
        <service android:name=".AutoUpdateService"/>

        <activity android:name=".MainActivity"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>



        <activity android:name=".waittool.kkActivity"/>
        <activity android:name=".waittool.AddActivity"/>
        <activity android:name=".waittool.DetailActivity"/>
        <activity android:name=".activity.WebViewActivity"/>
    </application>

</manifest>